##############################################################################
#
# The Linux-GCC Makefile
#
##############################################################################

#
# Object files.
#

OBJ = editor.o graphics.o sprite.o mouse.o level.o entity.o levelTree.o ui.o

#
# Compiler stuff -- adjust to your system.
#

# Linux

CC     = gcc
SDL_CFLAGS = `sdl-config --cflags`
SDL_LDFLAGS = `sdl-config --libs` -lSDL_image -lSDL_ttf -lSDL_mixer
LFLAGS = -g -o ../editortest
CFLAGS = -g -Wall -pedantic

#
# Targets.
#

lavos: $(OBJ)
	gcc $(OBJ) $(LFLAGS) $(SDL_LDFLAGS)
  
depend:
	@-rm makefile.dep
	@echo Creating dependencies.
	@for i in *.c; do $(CC) $(INC) -MM $$i; done > makefile.dep
	@echo Done.

clean:
	rm *.o editortest

count:
	wc *.c *.h makefile

#
# Dependencies.
#

ui.o: ui.h levelTree.h level.h entity.h sprite.h
levelTree.o: levelTree.h
level.o: level.c level.h graphics.h sprite.h entity.h
mouse.o: mouse.c mouse.h graphics.h sprite.h
entity.o: entity.c entity.h sprite.h
sprite.o: sprite.c sprite.h graphics.h
graphics.o: graphics.c graphics.h
editor.o: editor.c graphics.h sprite.h mouse.h level.h levelTree.h ui.h

#
# The default rule.
#

.c.o:
	gcc $(CFLAGS) $(SDL_CFLAGS) -c $<

